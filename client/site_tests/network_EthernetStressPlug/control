AUTHOR = "ChromeOS Team"
NAME = "network_EthernetStressPlug"
PURPOSE = "Stress-test Ethernet plug/unplug"
CRITERIA = """
This test fails if device fails to obtain dhcp through ethernet.
"""

TIME = "SHORT"
TEST_CATEGORY = "Stress"
TEST_CLASS = "network"
TEST_TYPE = "client"

DOC = """
  Stress-tests simulating plugging/unplugging the ethernet dongle.
"""

# Default test to 100 iterations.
iterations = 100

# Parse comma-separated args.
for arg in args:
    for item in arg.split(','):
        key, val = item.split('=')
        if key == 'iterations':
            iterations = int(val)

job.run_test('network_EthernetStressPlug', num_runs=iterations)
