AUTHOR = "Chrome OS Team"
NAME = "system_PowerDraw"
TIME = "MEDIUM"
TEST_CATEGORY = "Functional"
TEST_CLASS = "system"
TEST_TYPE = "client"

DOC = """
This is a system power draw test.
"""

from autotest_lib.client.common_lib import site_power_status


_tag = 'PowerDraw'
_seconds = 200


def run_power_draw():
    job.run_test('system_PowerDraw', seconds=_seconds, tag=_tag)


def run_sat():
    job.run_test('system_SAT', seconds=_seconds, tag=_tag)


def run_gpu():
    job.run_test('gpu_SanAngeles', iterations=2, tag=_tag)


job.parallel([run_power_draw], [run_sat], [run_gpu])
