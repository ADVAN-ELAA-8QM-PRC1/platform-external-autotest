                label_en='wipe',
                label_zw='清除',
                autotest_name='factory_Wipe',
                dargs={'secure_wipe':_DO_FACTORY_SECURE_WIPE})]),

    InformationScreen(
        label_en='review',
        label_zw='報告',
        autotest_name='factory_Review',
        kbd_shortcut='z'),
