AUTHOR = "ChromeOS Team"
NAME = "network_3GSafetyDance.pseudomodem"
PURPOSE = "Stress-test all connman 3G operations."
CRITERIA = """
This test will fail if any DBus call times out or flimflam crashes.
"""
SUITE = "network3g_pseudomodem, bvt"
EXPERIMENTAL = "True"
TIME = "SHORT"
TEST_CATEGORY = "Stress"
TEST_CLASS = "network"
TEST_TYPE = "client"

DOC = """
  Stress-tests all connman 3G operations.

  This test runs a long series of 3G operations in pseudorandom order. All of
  these 3G operations must return a convincing result (EINPROGRESS or no error).
"""

# 3GPP
job.run_test('network_3GSafetyDance', pseudo_modem=True, tag='pseudomodem_3GPP')

# CDMA
job.run_test('network_3GSafetyDance',
             pseudo_modem=True,
             pseudomodem_family='CDMA',
             tag='pseudomodem_CDMA')
