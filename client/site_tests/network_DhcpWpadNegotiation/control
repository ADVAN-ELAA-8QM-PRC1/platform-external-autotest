TEST_CLASS = "network"
TEST_TYPE = "client"

DOC = """
  Tests that we can negotiate a lease on an IPv4 address via DHCP from
a server that provides the Web Proxy Auto Discovery option.

"""

job.run_test('network_DhcpWpadNegotiation')
