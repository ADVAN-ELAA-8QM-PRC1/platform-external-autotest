import logging

from autotest_lib.client.common_lib import utils


AUTHOR = 'ralphnathan'
NAME = 'brillo_SimpleAudioTest'
TIME = 'SHORT'
TEST_CATEGORY = 'Functional'
TEST_TYPE = 'Server'
SUITE = ''

DOC = """
Tests playing and recording audio on a Brillo device.
"""

TEST_ARG_NAMES = ()
args_dict = utils.args_to_dict(args)

def run(machine):
    test_args = {name: args_dict[name] for name in TEST_ARG_NAMES
                 if name in args_dict}
    job.run_test('brillo_SimpleAudioTest', host=hosts.create_host(machine),
                 **test_args)


parallel_simple(run, machines)
