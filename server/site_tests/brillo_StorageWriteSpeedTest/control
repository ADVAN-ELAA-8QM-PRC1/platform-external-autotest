import logging

from autotest_lib.client.common_lib import utils


AUTHOR = 'garnold'
NAME = 'brillo_StorageWriteSpeedTest'
TIME = 'SHORT'
TEST_CATEGORY = 'Functional'
TEST_TYPE = 'Server'
SUITE = ''

DOC = """
Tests whether a Brillo device runs a recent enough kernel.
"""

TEST_ARG_NAMES = ('block_size', 'num_blocks', 'min_speed')
args_dict = utils.args_to_dict(args)

def run(machine):
    test_args = {name: args_dict[name] for name in TEST_ARG_NAMES
                 if name in args_dict}
    job.run_test('brillo_StorageWriteSpeedTest',
                 host=hosts.create_host(machine), **test_args)


parallel_simple(run, machines)
