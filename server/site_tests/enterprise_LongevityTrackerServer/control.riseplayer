            'riseplayer:mfpgpdablffhbfofnhlpgmokokbahooi:index.html'
    job.run_test('enterprise_LongevityTrackerServer', host=host,
            kiosk_app_attributes=kiosk_app_attributes, tag='riseplayer')


parallel_simple(run_test, machines)
