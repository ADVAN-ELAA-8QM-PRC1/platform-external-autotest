# Purpose: This test verifies that the beacon interval set on the AP was
# successfully adopted by the DUT.

{ "name":"CheckBinterval",
  "steps":[             # Channel 6
    [ "create",         { "type":"hostap" } ],
    # Set beacon interval to 200 kus (1 kus = 1.024ms)
    [ "config",         { "channel":"2437", "mode":"11g", "bintval":"200" } ],
    [ "connect",        { "security":"none" } ],
    [ "client_check_bintval", [ "200" ] ],
    [ "client_ping",    { "count":"10" } ],
    [ "destroy" ],
  ],
}
