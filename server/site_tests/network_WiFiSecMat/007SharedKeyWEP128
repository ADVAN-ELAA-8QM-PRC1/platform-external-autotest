# Purpose: This test case verifies that the DUT can connect to an AP using
# WEP shared key authentication with 128-bit pre-shared keys (Ascii only).

{ "name":"CheckSharedKey_WEP128",
  "skip_test":"Linux does not support 128-bit WEP keys",
  "steps":[             # Channel [1,6,11]
    [ "create",         { "type":"hostap" } ],
    [ "config",         { "channel":"2412", "mode":"11g",
                          "authmode":"shared", "wepmode":"on",
                          # 32 hex digits : 01234567890123456789012345678901
                          "wep_key0":  "0123456789abcdef0123456789abcdef",
                          "wep_key1":  "89abcdef0123456789abcdef01234567",
                          "wep_key2":  "fedcba9876543210fedcba9876543210",
                          "wep_key3":  "109fedcba987654321fedcba98765432"
                        }
    ],

    # key index 0, 128-bit WEP
    [ "config",         { "deftxkey":"0" } ],
    [ "connect",        { "security":"wep",
                          "psk":"0:0123456789abcdef0123456789abcdef" } ],
    [ "client_ping",    { "count":"10" } ],
    [ "disconnect" ],
    [ "deconfig" ],

    # key index 1, 128-bit WEP
    [ "config",         { "deftxkey":"1" } ],
    [ "connect",        { "security":"wep",
                           "psk":"1:89abcdef0123456789abcdef01234567" } ],
    [ "client_ping",    { "count":"10" } ],
    [ "disconnect" ],
    [ "deconfig" ],

    # key index 2, 128-bit WEP
    [ "config",         { "deftxkey":"2" } ],
    [ "connect",        { "security":"wep",
                          "psk":"2:fedcba9876543210fedcba9876543210" } ],
    [ "client_ping",    { "count":"10" } ],
    [ "disconnect" ],
    [ "deconfig" ],

    # key index 3, 128-bit WEP
    [ "config",         { "deftxkey":"3" } ],
    [ "connect",        { "security":"wep",
                          "psk":"3:109fedcba9876544321fedcba98765432" } ],
    [ "client_ping",    { "count":"10" } ],
    [ "disconnect" ],

    [ "destroy" ],
  ],
}
