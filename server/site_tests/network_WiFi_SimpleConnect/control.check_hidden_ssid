AUTHOR = 'wiley@chromium.com'
NAME = 'network_WiFi_SimpleConnect'
TIME = 'SHORT'
TEST_TYPE = 'Server'

DOC = """
This test attempts to verify that we can connect to a hidden network on both
2.4 and 5 Ghz channels.
"""


from autotest_lib.server.cros.wlan import hostap_config


def run(machine):
    a_mode = hostap_config.HostapConfig.MODE_11A
    g_mode = hostap_config.HostapConfig.MODE_11G
    configurations = [hostap_config.HostapConfig(
                              channel=6, mode=g_mode, hide_ssid=True),
                      hostap_config.HostapConfig(
                              channel=36, mode=a_mode, hide_ssid=True),
                      hostap_config.HostapConfig(
                              channel=48, mode=a_mode, hide_ssid=True)]
    host = hosts.create_host(machine)
    job.run_test('network_WiFi_SimpleConnect',
                 host=host,
                 raw_cmdline_args=args,
                 additional_params=configurations)


parallel_simple(run, machines)
