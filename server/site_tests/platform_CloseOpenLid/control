from autotest_lib.server import utils

AUTHOR = "Chrome OS Team"
NAME = "platform_CloseOpenLid"
PURPOSE = "Test suspend/resume in response to lid events."
TIME = "LONG"
TEST_CATEGORY = "Functional"
TEST_CLASS = "platform"
TEST_TYPE = "server"

DOC = """
This test uses servo to simulate lid close and open events. Device state is
verified by pinging."""

args_dict = utils.args_to_dict(args)
servo_host = args_dict.get('servo_host', 'localhost')
servo_port = args_dict.get('servo_port', None)

def run(machine):
    host = hosts.create_host(machine, servo_host=servo_host,
                             servo_port=servo_port)
    job.run_test("platform_CloseOpenLid", host=host, disable_sysinfo=True)

parallel_simple(run, machines)
