AUTHOR = 'chromeos-gfx'
NAME = 'telemetry_GpuTests.screenshot_sync'
SUITE = 'graphics, perf_v2'
TIME = 'SHORT'
TEST_CATEGORY = 'Functional'
TEST_CLASS = 'gl'
TEST_TYPE = 'server'

DOC = """
This server control file executes the GPU telemetry test: screenshot_sync.
"""

def run_test(machine):
    host = hosts.create_host(machine)
    job.run_test('telemetry_GpuTests', host=host, test='screenshot_sync')


parallel_simple(run_test, machines)
