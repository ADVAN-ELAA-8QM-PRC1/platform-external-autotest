    [ "server_iperf",   { "tcp":None } ],
    [ "sleep",          { "time":"5.0" } ],
    [ "client_powersave_off" ],
    [ "client_iperf",   { "udp":None } ],
    [ "server_iperf",   { "udp":None } ],
    [ "client_iperf",   { "tcp":None } ],
    [ "server_iperf",   { "tcp":None } ],
    [ "disconnect" ],
    [ "deconfig" ],

    [ "config",         { "channel":"5240", "ht20":None,
                          "puren":None, "ssid_suffix": "50N" } ],

    [ "client_powersave_on" ],
    [ "connect",        { "security":"none" } ],
